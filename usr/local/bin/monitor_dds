#!/bin/sh

ADDED_WEB=0

add_web() {
if [ -e /var/www/d-tacq/acq_main_page.html ]; then
        grep -q $DEV /var/www/d-tacq/acq_main_page.html
        if [ $? -ne 0 ]; then
                sed -ie '/TABAPPEND/ {
a       <li><a title="DDS" href="acq_info_page.html">DDS</a></li>
}' /var/www/d-tacq/acq_main_page.html
        fi
        ADDED_WEB=1
	echo 1
else
	echo 0
fi
}

monitor() {
        while [ 1 ]
        do
                [ $ADDED_WEB -eq 0 ] && [ $(add_web) -eq 1 ] && break
                sleep 1
        done
	while [ 1 ]
	do
		echo monitor_dds waiting for ioc
		[ -e /usr/local/epics/scripts/wait_ioc_ready ] && 
			[ /usr/local/epics/scripts/wait_ioc_ready ] && break
		sleep 1
	done
	sleep 5
	while [ 1 ]
	do
		nice dump_dds 2>&1 > /dev/null 
	done
}


monitor


